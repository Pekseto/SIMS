<Window x:Class="Tourist_Project.WPF.Views.Owner.MonthlyStatistics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tourist_Project.WPF.Views.Owner"
        mc:Ignorable="d"
        Title="MonthlyStatistics" Height="450" Width="800">
    <Grid>
        <DataGrid ItemsSource="{Binding AccommodationStatistics}"></DataGrid>
        <Label Content="Most occupied month" Margin="100,200"></Label>
        <Label Content="{Binding MostOccupiedMonth}" Margin="250,200,100,200"></Label>
    </Grid>
</Window>
