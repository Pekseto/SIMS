<Window x:Class="Tourist_Project.WPF.Views.GuestRatingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tourist_Project.WPF.Views"
        mc:Ignorable="d"
        Title="GuestRatingView" Height="450" Width="800">
    <Grid>
        <Menu></Menu>
        <DataGrid ItemsSource="{Binding FilteredGuestRatings, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding SelectedGuestRating, UpdateSourceTrigger=PropertyChanged}"
                  AutoGenerateColumns="false">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Cleanliness" Width="*" Binding="{Binding CleanlinessGrade}"></DataGridTextColumn>
                <DataGridTextColumn Header="Rule Compliance" Width="*" Binding="{Binding RuleCompliance}"></DataGridTextColumn>
                <DataGridTextColumn Header="Comment" Width="*" Binding="{Binding Comment}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
