<Window x:Class="Tourist_Project.WPF.Views.GuestOneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tourist_Project.WPF.Views"
        mc:Ignorable="d"
        Title="GuestOne" Height="450" Width="800">

    <Grid>
        <DockPanel>
            <ToolBar DockPanel.Dock="Top" Height="25">
                <Button Content="Your Reservations" HorizontalAlignment="Left" VerticalAlignment="Top" Command="{Binding UserReservations_Command}"></Button>
                <Button Content="Reserve Accommodation" HorizontalAlignment="Left" VerticalAlignment="Top" Command="{Binding CreateReservation_Command}"/>
                <Button Content="Rate Accommodation" HorizontalAlignment="Left" VerticalAlignment="Top" Command="{Binding RateAccommodation_Command}"></Button>
                <Button Content ="Search" HorizontalAlignment="Left" VerticalAlignment="Top" Command="{Binding Search_Command}" ></Button>
                
            </ToolBar>

            <StackPanel Grid.Row="2" Grid.ColumnSpan="4" Grid.RowSpan="2" RenderTransformOrigin="0.501,0.481" Width="800">
                <DockPanel>
                    <DataGrid ItemsSource="{Binding AccommodationsViewModel,UpdateSourceTrigger=PropertyChanged}" Name="GuestOneDataGrid"
                        SelectedItem="{Binding SelectedAccommodation, UpdateSourceTrigger=PropertyChanged}"
                        IsReadOnly="True" SelectionMode="Single"
                        AutoGenerateColumns="False" HeadersVisibility="Column" FontSize="13" Width="800">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Location" Width="*" Binding="{Binding Location}"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Accommodation.Name}" Width="*"></DataGridTextColumn>
                            <DataGridTextColumn Header="MaxGuestsNum" Binding="{Binding Accommodation.MaxGuestNum}" Width="*"></DataGridTextColumn>
                            <DataGridTextColumn Header="MinStayingDays" Binding="{Binding Accommodation.MinStayingDays}" Width="*"></DataGridTextColumn>
                            <DataGridTextColumn Header="DaysBeforeCancel" Binding="{Binding Accommodation.CancellationThreshold}" Width="*"></DataGridTextColumn>
                            <DataGridTextColumn Header="Image" Binding="{Binding Image.Url}" Width="*"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </StackPanel>
        </DockPanel>

    </Grid>
</Window>
